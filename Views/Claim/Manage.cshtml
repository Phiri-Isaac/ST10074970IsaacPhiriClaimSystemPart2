@model List<ClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Manage Claims";
}

<h2 class="text-center my-4">Manage Claims</h2>

<!-- ✅ Display success or info messages -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">@TempData["Message"]</div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate (R)</th>
                <th>Total (R)</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("F2")</td>
                    <td>@claim.TotalAmount.ToString("F2")</td>
                    <td>
                        <span class="badge bg-@(claim.Status == "Approved"
                                                          ? "success"
                                                          : claim.Status == "Pending"
                                                              ? "warning text-dark"
                                                              : "secondary")">
                    @claim.Status
                </span>
            </td>

                    <td>
                @if (!string.IsNullOrWhiteSpace(claim.Notes))
                        {
                            <small>@claim.Notes</small>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>

                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                        {
                            <a href="@claim.SupportingDocumentPath" target="_blank" class="btn btn-link btn-sm">View</a>
                        }
                        else
                        {
                            <span class="text-muted">No file</span>
                        }
                    </td>

                    <td>
                        @if (claim.Status == "Pending")
                        {
                            <form asp-action="Approve" method="post" asp-route-id="@claim.Id" style="display:inline;">
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form asp-action="Reject" method="post" asp-route-id="@claim.Id" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center">No claims have been submitted yet.</div>
}

<hr />

<div class="text-center mt-3">
    <a asp-action="Submit" class="btn btn-primary">Submit New Claim</a>
</div>