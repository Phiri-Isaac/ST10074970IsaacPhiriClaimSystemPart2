@model IEnumerable<ClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Manage Claims";
}

<h2 class="text-center mb-4">Manage Claims</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">@TempData["Message"]</div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate (R)</th>
                <th>Total (R)</th>
                <th>Status</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var claim in Model)
            {
                <tr class="text-center">
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@(claim.HoursWorked* claim.HourlyRate)</td>
                    <td>
                        <span class="badge @(claim.Status == "Approved" ? "bg-success" : (claim.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark"))">
                            @claim.Status
                        </span>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                        {
                            <a href="@claim.SupportingDocumentPath" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>
                        @if (claim.Status == "Pending")
                        {
                            <form asp-action="Approve" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <form asp-action="Reject" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center">No claims have been submitted yet.</div>
}

<div class="text-center mt-4">
    <a asp-action="Submit" class="btn btn-primary">Submit New Claim</a>
</div>