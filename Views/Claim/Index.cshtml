@model ClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Submit a Claim";
}

<h2>Lecturer Claim Submission</h2>

<form asp-action="Submit" method="post">
    <div>
        <label>Lecturer Name:</label>
        <input asp-for="LecturerName" required />
    </div>

    <div>
        <label>Hours Worked:</label>
        <input asp-for="HoursWorked" type="number" step="0.5" required />
    </div>

    <div>
        <label>Hourly Rate (R):</label>
        <input asp-for="HourlyRate" type="number" step="0.01" required />
    </div>

    <div>
        <label>Notes:</label>
        <textarea asp-for="Notes"></textarea>
    </div>

    <div>
        <button type="submit">Submit Claim</button>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <p style="color:green;">@ViewBag.Message</p>
}

