@model ClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Submit a Claim";
}

<h2>Lecturer Claim Submission</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div>
        <label>Lecturer Name:</label><br />
        <input asp-for="LecturerName" class="form-control" required />
    </div>

    <div>
        <label>Hours Worked:</label><br />
        <input asp-for="HoursWorked" type="number" step="0.5" class="form-control" required />
    </div>

    <div>
        <label>Hourly Rate (R):</label><br />
        <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" required />
    </div>

    <div>
        <label>Notes:</label><br />
        <textarea asp-for="Notes" class="form-control" placeholder="Any extra details..."></textarea>
    </div>

    <div>
        <label>Supporting Document (optional):</label><br />
        <input type="file" name="supportingDocument" accept=".pdf,.doc,.docx" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit Claim</button>
    </div>
</form>

<hr />
<a asp-action="Manage" class="btn btn-link">View All Claims</a>